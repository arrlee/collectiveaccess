# Create a new file named pdf2txt-safe
cat << 'EOF' > /usr/bin/pdf2txt-safe
#!/bin/sh
# If no arguments are passed, print help but exit with SUCCESS (0) to satisfy CollectiveAccess
if [ $# -eq 0 ]; then
    /usr/bin/pdf2txt --help
    exit 0
fi
# Otherwise, run the actual command with the provided arguments
/usr/bin/pdf2txt "$@"
EOF
